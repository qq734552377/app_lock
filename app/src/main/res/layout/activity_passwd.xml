<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    tools:context="ucast.com.dizuo_connect_test.activities.PasswdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/PasswdTextViewStyle"
            android:text="原始密码："

            />

        <EditText
            android:id="@+id/passwd_et_old"
            style="@style/PasswdEditTextStyle" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/PasswdTextViewStyle"
            android:text="新密码："

            />

        <EditText
            android:id="@+id/passwd_et_new1"
            style="@style/PasswdEditTextStyle" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            style="@style/PasswdTextViewStyle"
            android:text="确认密码："

            />

        <EditText
            android:id="@+id/passwd_et_new2"
            style="@style/PasswdEditTextStyle" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="25dp"
            android:gravity="center_vertical|right">
            <Button
                android:id="@+id/passwd_bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返      回"
                android:textColor="@drawable/bt_textcolor"
                android:textSize="20sp"
                android:background="@drawable/round"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="25dp">
            <Button
                android:id="@+id/passwd_bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认修改"
                android:textSize="20sp"
                android:textColor="@drawable/bt_textcolor"
                android:background="@drawable/round"/>

        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />
    </LinearLayout>
</LinearLayout>
